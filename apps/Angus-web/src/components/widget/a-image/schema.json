{
    "title": "AImage",
    "description": "The base componet of AImage",
    "type": "object",
    "required": [
        "url",
        "style",
        "title"
    ],
    "properties": {
        "url": {
            "type": [
                "string"
            ]
        },
        "title": {
            "type": [
                "string"
            ]
        },
        "style": {
            "type": "object",
            "properties": {
                "width": {
                    "type": "number",
                    "minmun": 0,
                    "maximum": 1500
                },
                "height": {
                    "type": "number",
                    "minmun": 0,
                    "maximum": 1500
                },
                "borderRadius": {
                    "type": "number",
                    "minmun": 0,
                    "maximum": 750
                },
                "borderWidth": {
                    "type": "number",
                    "minmun": 0,
                    "maximum": 500
                },
                "borderColor": {
                    "type": "string"
                },
                "borderStyle": {
                    "type": "string",
                    "enum": [
                        "dashed",
                        "solid"
                    ]
                },
                "left": {
                    "type": "number"
                },
                "top": {
                    "type": "number"
                }
            },
            "additionalProperties": false
        }
    }
}