{
    "title": "Widget",
    "description": "The Schema Of Widget",
    "type": "object",
    "strict": false,
    "required": [
        "style",
        "id",
        "type",
        "label"
    ],
    "properties": {
        "id": {
            "type": "number"
        },
        "type": {
            "type": "string"
        },
        "label": {
            "type": "string"
        },
        "url": {
            "type": "string"
        },
        "icon": {
            "type": "string"
        },
        "isLock": {
            "type": "boolean"
        },
        "placeholder": {
            "type": "string"
        },
        "title": {
            "type": "string"
        },
        "style": {
            "type": "object",
            "additionalProperties": true,
            "properties": {
                "width": {
                    "type": "number"
                },
                "height": {
                    "type": "number"
                },
                "left": {
                    "type": "number"
                },
                "top": {
                    "type": "number"
                }
            }
        }
    }
}